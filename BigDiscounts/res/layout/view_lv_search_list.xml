<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/white" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_product_image"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="@dimen/margin_5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/iv_SearchItem_ProductImage"
            android:text="Product Name"
            android:textColor="@color/gray"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/tv_product_selling_prise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_SearchItem_ProductName"
            android:layout_toRightOf="@+id/iv_SearchItem_ProductImage"
            android:text="Rs 2000.00/-"
            android:textColor="@color/gray"
            android:textSize="@dimen/medium_text_size" />

        <TextView
            android:id="@+id/tv_product_mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_SearchItem_ProductSellingPrize"
            android:layout_toRightOf="@+id/iv_SearchItem_ProductImage"
            android:text="50000.00/-"
            android:textColor="@color/gray"
            android:textSize="@dimen/medium_text_size" />

        <TextView
            android:id="@+id/tv_product_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_SearchItem_ProductMRP"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:gravity="center"
            android:padding="@dimen/padding_10dp"
            android:text="50% off"
            android:textColor="@color/red"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>